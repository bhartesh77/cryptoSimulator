<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="css/user.css">
</head>
<body>

    <nav>
        <div class="logo">
            <p>cryptoFlip</p>
        </div>
        
        <a href="/trade" class="trading-link">
            <div class="trading-button">Open Trades</div>
        </a>
        
        <div class="wallet-balance">
            <span id="wallet">Wallet balance</span>
            <span id="wallet-balance"><%= walletbalance %> <span class="usdt-tag">USDT</span></span>
        </div>
            
        <form action="/add-money" class="add-money" method="POST"> 
            <input type="number" name="money" class="input-money form-control" id="formGroupExampleInput2" placeholder="Enter Amount">
            <button type="submit" class="add-money-button btn btn-dark">ADD USDT</button>
        </form>
        
    </nav>
        
    <div class="main-container">
        
        <% if(trades.length) { %>
            <p id="heading">Open Positions<p>
        <% } else { %>
            <p id="heading">No Open Positions<p>
        <% } %>
        
        
        
        <div class="main-trade-container">

            <ul>
                <% for(let i of trades) { %>
                    <% if(i.name == 'btc') { %>
                        <div class="btc-container container">
                            <div class="top-container">
                                <span class="crypto-name name-tag">BTC / USDT</span>
                                <span class="leverage"><%= i.leverage %>x</span>
                            </div>
                            
                            <div class="bottom-container">
                                <div class="left-container">
                                    <div class="element">
                                        <p class="name-tag">Market Price</p>
                                        <p><%= i.marketPrice %></p>
                                    </div>
                                    <div class="element">
                                        <p class="name-tag">Entry Price</p>
                                        <p><%= i.entryPrice %></p>
                                    </div>
                                    <div class="element">
                                        <p class="name-tag">Margin</p>
                                        <p><%= i.margin %></p>
                                    </div>
                                    <div class="element">
                                        <p class="name-tag">liq. Price</p>
                                        <p><%= i.liquidationPrice %></p>
                                    </div>
                                    <div class="element">
                                        <p class="name-tag">ROE</p>
                                        <p class="value"><%= i.roe %></p>
                                    </div>
                                    <div class="element">
                                        <p class="name-tag">PNL</p>
                                        <p class="value"><%= i.pnl %></p>
                                    </div>
                                    
                                    
                                </div>
                            </div>
                        </div>
                        <a class="sell-button-atag" href="/sell-btc">
                            <div class="sell-button">SELL</div>
                        </a>
                    <% } %>

                    <% if(i.name == 'eth') { %>
                        <div class="eth-container container">
                            <div class="top-container">
                                <span class="crypto-name name-tag">ETH / USDT</span>
                                <span class="leverage"><%= i.leverage %>x</span>
                            </div>
                            
                            <div class="bottom-container">
                                <div class="left-container">
                                    <div class="element">
                                        <p class="name-tag">Market Price</p>
                                        <p><%= i.marketPrice %></p>
                                    </div>
                                    <div class="element">
                                        <p class="name-tag">Entry Price</p>
                                        <p><%= i.entryPrice %></p>
                                    </div>
                                    <div class="element">
                                        <p class="name-tag">Margin</p>
                                        <p><%= i.margin %></p>
                                    </div>
                                    <div class="element">
                                        <p class="name-tag">liq. Price</p>
                                        <p><%= i.liquidationPrice %></p>
                                    </div>
                                    <div class="element">
                                        <p class="name-tag">ROE</p>
                                        <p class="value"><%= i.roe %></p>
                                    </div>
                                    <div class="element">
                                        <p class="name-tag">PNL</p>
                                        <p class="value"><%= i.pnl %></p>
                                    </div>
                                    
                                    
                                </div>
                                
                                <!-- <div class="right-container">
                                    <p class="name-tag">ROE</p>
                                    <p class="value"><%= i.roe %></p>
                                    <p class="name-tag">PNL</p>
                                    <p class="value"><%= i.pnl %></p>
                                </div> -->
                            </div>
                        </div>
                        <a class="sell-button-atag" href="/sell-eth">
                            <div class="sell-button">SELL</div>
                        </a>
                    <% } %>
                <% } %>
                        
            </ul>
            
        </div>
        
    
  
        <!-- <div class="eth-container container">
            <span class="crypto-name">ETH / USDT</span>
            <span class="leverage">6x</span>
        </div>   -->
        
      </div>
      <script src="js/user.js"></script>
</body>
</html>